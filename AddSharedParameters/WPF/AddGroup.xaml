<Window x:Class="AddSharedParameters.GroupAddWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AddSharedParameters"
             mc:Ignorable="d" 
             Background="Bisque" Height="200" Width="250">
    <Grid>
        <StackPanel Margin="10,10,10,10">
            <Label Content="Enter a name of the group:" HorizontalAlignment="Left" />
            <TextBox x:Name="GroupNameText" Width="223" TextWrapping="Wrap" Text="" 
			VerticalContentAlignment="Center" HorizontalAlignment="Left" />
            <Button x:Name="OK" HorizontalAlignment="Left" Content="OK" Margin="0,20,10,10" 
                        Click ="Button_OK_Click" Padding="10" Height="40" Width="70" Background="LightGreen"/>
        </StackPanel>
    </Grid>
</Window>
